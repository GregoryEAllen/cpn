
CC_OTHER += -fPIC
LD_OTHER += -fPIC
ifeq ($(shell uname -s),Darwin)
    LD_OTHER += -undefined dynamic_lookup
endif

sharedlibs: lib 
	${LD} -shared -o ${SHAREDLIBRARY} ${LINKOBJECTS} ${LD_OTHER} ${OS_LIBS}


$(OSDIR)/node.list:$(LIBRARY)
	echo 'lib' > $@
	basename $(SHAREDLIBRARY) >> $@
	nm $(LIBRARY) | grep T.\*cpninit | cut -sf 3 -d ' ' >> $@
	echo ';' >> $@

lib :: $(OSDIR)/node.list
