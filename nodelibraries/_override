

USE_NODELIB=1
ifdef USE_NODELIB
    NODELIBS := $(shell find -H $(SUBDIRS) -name _link_override -path \*$(OSDIR)\*| xargs cat | paste -sd '%' - | sed -e 's/%/,-u,/g')
    LD_OTHER += -Wl,-u,$(NODELIBS)
endif

$(OSDIR)/_link_override:$(LIBRARY)
	@nm $(LIBRARY) | grep T.\*cpninit | cut -sf 3 -d ' ' >> $@

lib :: $(OSDIR)/_link_override

