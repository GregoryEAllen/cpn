<?xml version="1.0"?>
<hostprog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="cpn.xsd">
    <name>zeus</name>
    <hosttype>master</hosttype>
    <hosts>
        <host>
	    <name>zeus</name>
	    <hosttype>master</hosttype>
	    <connection>
		<type>tcpip</type>
		<param>zeus.arlut.utexas.edu</param>
	    </connection>
	</host>
    </hosts>
    <nodes>
	<node>
	    <name>A</name>
	    <type>MockNode</type>
	    <param>source</param>
	</node>
	<node>
	    <name>B</name>
	    <type>MockNode</type>
	    <param>transmute</param>
	</node>
	<node>
	    <name>C</name>
	    <type>MockNode</type>
	    <param>sink</param>
	</node>
    </nodes>
    <queues>
	<queue>
	    <name>Queue A to B</name>
	    <type>CPN::ThresholdQueue</type>
	    <datatype>uint64</datatype>
	    <size>1024</size>
	    <maxThreshold>512</maxThreshold>
	    <channels>1</channels>
	    <writer>
		<node>A</node>
		<port>y</port>
	    </writer>
	    <reader>
		<node>B</node>
		<port>x</port>
	    </reader>
	</queue>
	<queue>
	    <name>Queue B to C</name>
	    <type>CPN::ThresholdQueue</type>
	    <datatype>uint64</datatype>
	    <size>1024</size>
	    <maxThreshold>512</maxThreshold>
	    <channels>1</channels>
	    <writer>
		<node>B</node>
		<port>y</port>
	    </writer>
	    <reader>
		<node>C</node>
		<port>x</port>
	    </reader>
	</queue>
    </queues>
</hostprog>

